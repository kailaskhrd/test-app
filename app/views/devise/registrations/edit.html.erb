<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <% if resource.profile_photo.attached?%>
    <%= image_tag resource.profile_photo , class: 'profile-img'%>
  <% end%>

  <div class="field">
    <%= f.label :profile_photo %><br />
    <%= f.file_field :profile_photo %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <!--div>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div-->
  <%# end %>

  <%= render partial: "devise/registrations/address_fields", locals: {resource_frm: f} %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

